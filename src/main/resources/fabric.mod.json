{
  "schemaVersion": 1,
  "id": "lottablocks",
  "version": "${version}",

  "name": "Lotta Blocks",
  "description": "A small mod that adds several different building blocks for your build pallet!",
  "authors": [
    "AmbientUnder",
    "LunarLuned",
    "Sydokiddo",
    "ElBones (Additional Textures)"
  ],
  "contact": {
    "homepage": "https://www.twitter.com/CosmaMods",
    "sources": "https://github.com/LunarLuned/lotta_blocks"
  },

  "license": "MIT",
  "icon": "assets/lottablocks/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.ambersand.lottablocks.LottaBlocks"
    ],
    "client": [
      "net.ambersand.lottablocks.client.LottaBlocksClient"
    ]
  },
  "mixins": [
    "lottablocks.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.21",
    "fabric-api": "*",
    "minecraft": ">=1.20.2",
    "java": ">=17"
  },
  "breaks": {},
  "suggests": {
    "another-mod": "*"
  }
}